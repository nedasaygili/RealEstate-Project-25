@{
    Layout = null; // Giriş sayfasında menüler görünmesin
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UNEA | Admin Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #2c3e50;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
    </style>
</head>
<body>
    <div class="card login-card bg-white">
        <div class="card-header bg-dark text-white text-center py-4">
            <h3 class="fw-bold mb-0"><span style="color:#1abc9c">U</span>NEA LOGIN</h3>
        </div>
        <div class="card-body p-5">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form action="/Account/Login" method="post">
                <div class="mb-3">
                    <label class="fw-bold small mb-1">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="admin@unea.com" required>
                </div>
                <div class="mb-4">
                    <label class="fw-bold small mb-1">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Admin123!" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" style="background:#1abc9c; border:none;">LOGIN</button>
            </form>

            <div class="mt-4 text-center">
                <small class="text-muted">Test Credentials:<br>admin@unea.com / Admin123!</small>
            </div>
        </div>
    </div>
</body>
</html>