<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UNEA | Real Estate Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-brand span {
            font-weight: 800;
        }

        .nav-link {
            font-weight: 600;
            color: #34495e !important;
        }

            .nav-link:hover {
                color: #1abc9c !important;
            }
    </style>
</head>
<body>

    <div class="bg-dark text-white py-2 small">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <i class="fa fa-phone me-2 text-warning"></i> +90 236 232 61 66
                <span class="mx-2">|</span>
                <i class="fa fa-envelope me-2 text-warning"></i> info@unea.com
            </div>
            <div>
                <span class="d-none d-md-inline">Manisa Yunusemre Real Estate Office</span>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-3">
        <div class="container">
            <a class="navbar-brand fs-3" href="/">
                <span style="color:#1abc9c">U</span><span style="color:#e74c3c">N</span><span style="color:#f1c40f">E</span><span style="color:#2c3e50">A</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarMain">
                <ul class="navbar-nav gap-4">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" href="/Agents/Index">Agents List</a></li>
                    }

                    <li class="nav-item"><a class="nav-link" href="/Properties">Portfolio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-muted small me-2 d-none d-md-inline"><strong>@User.Identity.Name</strong></span>

                    <a href="/Account/Logout" class="btn btn-sm btn-dark">
                        <i class="fa fa-sign-out-alt"></i> Logout
                    </a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-dark rounded-pill px-4 shadow-sm">Login</a>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <a href="https://wa.me/902362326166" target="_blank" style="position:fixed; bottom:30px; right:30px; background:#25d366; width:60px; height:60px; border-radius:50%; display:flex; align-items:center; justify-content:center; color:white; font-size:32px; z-index:9999; box-shadow: 0 4px 10px rgba(0,0,0,0.3); transition: transform 0.3s;">
        <i class="fab fa-whatsapp"></i>
    </a>

    <footer class="bg-light border-top py-5 mt-5">
        <div class="container text-center">
            <h5 class="fw-bold mb-3">UNEA Real Estate Turkey</h5>
            <p class="small text-muted mb-0"><i class="fa fa-map-marker-alt me-2 text-primary"></i> 75. Yıl Mah. Yunusemre/MANİSA</p>
            <p class="small text-muted mt-3">&copy; 2025 UNEA. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>