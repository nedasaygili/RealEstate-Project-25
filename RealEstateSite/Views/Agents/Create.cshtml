@model RealEstateSite.Models.Agent

@{
    ViewData["Title"] = "Add New Agent";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold"><i class="fa fa-user-plus me-2"></i> Add New Agent (Staff)</h4>
                </div>
                <div class="card-body p-5">

                    <form asp-action="Create" enctype="multipart/form-data">

                        <h5 class="text-primary border-bottom pb-2 mb-4">Personal Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Title (Position)</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Senior Broker" required />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Phone Number</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control"
                                       placeholder="05xxxxxxxxx" maxlength="11" required
                                       oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <h5 class="text-success border-bottom pb-2 mb-4">Login Credentials (Important)</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Email (Username)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="agent@unea.com" required />
                                </div>
                                <small class="text-muted">* This will be used for login.</small>
                                <span asp-validation-for="Email" class="text-danger d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" id="CreatePasswordInput" placeholder="Create a strong password..." required />

                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('CreatePasswordInput')">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>

                                <div class="text-muted small mt-2" style="font-size: 0.85rem;">
                                    <strong><i class="fa fa-info-circle"></i> Password Rules:</strong>
                                    <ul class="mb-0 ps-3">
                                        <li>Min 8 characters</li>
                                        <li>At least 1 Uppercase (A-Z)</li>
                                        <li>At least 1 Number (0-9)</li>
                                        <li>At least 1 Symbol (!.+*)</li>
                                    </ul>
                                </div>
                                <span asp-validation-for="Password" class="text-danger fw-bold"></span>
                            </div>
                        </div>

                        <h5 class="text-warning border-bottom pb-2 mb-4">Profile Details</h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">Upload Photo</label>
                                <input type="file" name="photoFile" class="form-control" accept="image/*" />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">Biography</label>
                                <textarea asp-for="Biography" class="form-control" rows="3" placeholder="Short bio..." required></textarea>
                                <span asp-validation-for="Biography" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-success py-3 fw-bold fs-5 shadow-sm">
                                <i class="fa fa-save me-2"></i> SAVE & CREATE AGENT
                            </button>
                            <a asp-action="Index" class="btn btn-light text-muted">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId) {
        var input = document.getElementById(inputId);
        if (input.type === "password") {
            input.type = "text";
        } else {
            input.type = "password";
        }
    }
</script>