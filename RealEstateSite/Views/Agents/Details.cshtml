@model RealEstateSite.Models.Agent

@{
    ViewData["Title"] = "Agent Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center"><i class="bi bi-person-lines-fill"></i> Agent Profile Details</h4>
                </div>

                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-4 text-center border-end">
                            <div>
                                @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                                {
                                    <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle shadow border border-4 border-white" alt="@Model.FirstName" style="width: 200px; height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-white d-inline-flex justify-content-center align-items-center text-secondary shadow-sm" style="width: 200px; height: 200px; font-size: 80px;">
                                        <i class="bi bi-person"></i>
                                    </div>
                                }
                                <h3 class="mt-3 fw-bold text-dark">@Model.FirstName @Model.LastName</h3>
                                <span class="badge bg-info text-dark px-3 py-2 rounded-pill">@Model.Title</span>
                            </div>
                        </div>

                        <div class="col-md-8 p-4 bg-white">
                            <h5 class="text-uppercase text-muted border-bottom pb-2 mb-3">Contact Information</h5>

                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold text-secondary">Phone:</div>
                                <div class="col-sm-8">
                                    <a href="tel:@Model.PhoneNumber" class="text-decoration-none text-dark fw-bold">
                                        <i class="bi bi-telephone-fill text-success me-2"></i>@Model.PhoneNumber
                                    </a>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-sm-4 fw-bold text-secondary">Email:</div>
                                <div class="col-sm-8">
                                    <a href="mailto:@Model.Email" class="text-decoration-none text-dark fw-bold">
                                        <i class="bi bi-envelope-fill text-danger me-2"></i>@Model.Email
                                    </a>
                                </div>
                            </div>

                            <h5 class="text-uppercase text-muted border-bottom pb-2 mb-3">Biography</h5>
                            <p class="text-secondary" style="line-height: 1.6;">
                                @(string.IsNullOrEmpty(Model.Biography) ? "No biography available." : Model.Biography)
                            </p>

                            <div class="alert alert-light border mt-4 p-2 rounded">
                                <small class="text-muted d-block text-uppercase fw-bold mb-1">System Info</small>
                                <div class="d-flex justify-content-between">
                                    <span><strong>Password:</strong> @Model.Password</span>
                                    <span class="text-muted fst-italic ms-3">ID: @Model.Id</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-3 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2 shadow-sm">
                            <i class="bi bi-pencil-square"></i> Edit Profile
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger px-4 shadow-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>