@model RealEstateSite.Models.Agent

@{
    ViewData["Title"] = "Delete Agent";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg overflow-hidden">

                <div class="card-header bg-danger text-white text-center py-3">
                    <h5 class="m-0 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Confirmation
                    </h5>
                </div>

                <div class="card-body text-center p-5">

                    <h3 class="fw-bold mb-3">Are you sure you want to delete this agent?</h3>
                    <p class="text-muted mb-4">
                        This action cannot be undone. The agent account (including their profile data) will be permanently removed from the database.
                    </p>

                    <div class="card border-0 bg-light mb-4 rounded-3 text-start">
                        <div class="card-body d-flex align-items-center">

                            <div class="flex-shrink-0">
                                <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "https://via.placeholder.com/150" : Model.ProfileImageUrl)"
                                     alt="@Model.FirstName"
                                     class="rounded-circle border border-2 border-white shadow-sm"
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            </div>

                            <div class="flex-grow-1 ms-3">
                                <h4 class="mb-0 fw-bold text-dark">@Model.FirstName @Model.LastName</h4>
                                <div class="text-primary fw-bold small text-uppercase">@Model.Title</div>
                                <div class="text-muted small">
                                    <i class="bi bi-envelope me-1"></i> @Model.Email
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg px-4 rounded-pill shadow-sm">
                                <i class="bi bi-trash-fill me-2"></i> YES, DELETE
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                CANCEL
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>