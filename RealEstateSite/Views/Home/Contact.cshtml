@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Sol Panel (Siyah Kutu) */
    .contact-left-panel {
        background-color: #1a1a1a;
        color: white;
        border-radius: 12px;
        padding: 30px;
        height: 100%;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
    }

    /* Görsel - BÜYÜK */
    .contact-img-wrapper {
        width: 100%;
        height: 300px;
        overflow: hidden;
        border-radius: 8px;
        margin-bottom: 30px;
        background-color: #fff;
    }

        .contact-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Sol Panel Satır Düzeni */
    .contact-row {
        display: flex;
        align-items: flex-start;
        margin-bottom: 25px;
    }

    /* İkon Kutusu */
    .contact-icon-box {
        width: 45px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding-top: 5px;
    }

        .contact-icon-box i {
            color: #ffc107; /* Sarı renk */
            font-size: 1.6rem;
        }

    /* Yazılar */
    .contact-label {
        color: #ffc107;
        font-size: 0.9rem;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 3px;
        letter-spacing: 0.5px;
    }

    .contact-value {
        color: #e0e0e0;
        font-size: 1rem;
        text-decoration: none;
        line-height: 1.5;
    }

        .contact-value:hover {
            color: #fff;
        }

    /* Sağ Panel (Form) */
    .contact-form-panel {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        border: 1px solid #eaeaea;
        height: 100%;
    }

    .form-control {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        padding: 12px;
        font-size: 0.95rem;
        border-radius: 8px;
    }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.2);
            background-color: #fff;
        }

    .btn-dark-custom {
        background-color: #1a1a1a;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        transition: 0.3s;
    }

        .btn-dark-custom:hover {
            background-color: #333;
            transform: translateY(-2px);
        }
</style>

<div class="container py-5">
    <div class="row g-4">

        <div class="col-lg-5">
            <div class="contact-left-panel">

                <div class="contact-img-wrapper">
                    <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                         alt="Real Estate Keys">
                </div>

                <div class="contact-row mt-2">
                    <div class="contact-icon-box">
                        <i class="bi bi-telephone-fill"></i>
                    </div>
                    <div>
                        <div class="contact-label">Phone</div>
                        <a href="tel:+902362326166" class="contact-value">+90 236 232 61 66</a>
                    </div>
                </div>

                <div class="contact-row">
                    <div class="contact-icon-box">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <div>
                        <div class="contact-label">E-mail</div>
                        <a href="mailto:info@unea.com" class="contact-value">info@unea.com</a>
                    </div>
                </div>

                <div class="contact-row mb-0">
                    <div class="contact-icon-box">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <div>
                        <div class="contact-label">Address</div>
                        <p class="contact-value mb-0">
                            75. Yıl Mah.<br>
                            Yunusemre/MANİSA
                        </p>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-7">
            <div class="contact-form-panel shadow-sm">

                <div class="text-center mb-4">
                    <h3 class="fw-bold text-dark mb-2">Get in Touch</h3>
                    <p class="text-muted small">You can write to us about any topic regarding your real estate needs.</p>
                </div>

                <form asp-action="Contact" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-secondary">Your Name</label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-secondary">Email Address</label>
                        <input type="email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-secondary">Subject</label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary">Message (Optional)</label>
                        <textarea class="form-control" rows="4"></textarea>
                    </div>

                    <button type="submit" class="btn btn-dark-custom w-100">
                        Send Message
                    </button>
                </form>
            </div>
        </div>

    </div>
</div>