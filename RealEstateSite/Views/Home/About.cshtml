@{
    ViewData["Title"] = "About Us";
}

<div class="container-fluid bg-dark text-white py-5 mb-5" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&w=1920&q=80'); background-size: cover; background-position: center;">
    <div class="container text-center py-5">
        <h1 class="display-4 fw-bold">About UNEA Real Estate</h1>
        <p class="lead mb-0">Building Trust, Delivering Excellence Since 2005.</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row align-items-center g-5">
        <div class="col-lg-6">
            <div class="position-relative">

                <img src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?auto=format&fit=crop&w=1350&q=80"
                     class="img-fluid rounded-3 shadow-lg"
                     alt="UNEA Modern Office Storefront">

                <div class="position-absolute bottom-0 start-0 bg-primary text-white p-4 rounded-3 shadow-lg m-4" style="max-width: 200px;">
                    <h2 class="fw-bold m-0">20+</h2>
                    <small class="text-uppercase fw-bold" style="letter-spacing: 1px;">Years of Experience</small>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <h6 class="text-primary fw-bold text-uppercase mb-2">Who We Are</h6>
            <h2 class="fw-bold display-6 mb-4">Your Trusted Real Estate Partner in Manisa</h2>

            <p class="text-muted lead">
                Established in 2005 in the heart of Manisa, UNEA Real Estate has grown from a local family business into the region's most trusted property consultancy.
            </p>

            <p class="text-secondary">
                With over two decades of experience, we specialize in residential sales, commercial property leasing, and investment portfolio management. We don't just find you a property; we find you a home and a future. Our dedicated team combines deep local market knowledge with global standards to ensure your investments yield the best returns.
            </p>

            <div class="row mt-4 g-3">
                <div class="col-sm-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-light text-primary rounded-circle p-2 me-3">
                            <i class="bi bi-check-lg fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold m-0">Certified Agents</h6>
                            <small class="text-muted">Professional Team</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-light text-primary rounded-circle p-2 me-3">
                            <i class="bi bi-house-door fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold m-0">Broad Portfolio</h6>
                            <small class="text-muted">Residences & Offices</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <div class="bg-light text-primary rounded-circle p-2 me-3">
                            <i class="bi bi-graph-up-arrow fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold m-0">Investment Focus</h6>
                            <small class="text-muted">High ROI Analysis</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <div class="bg-light text-primary rounded-circle p-2 me-3">
                            <i class="bi bi-emoji-smile fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold m-0">Customer First</h6>
                            <small class="text-muted">100% Satisfaction</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <a asp-controller="Properties" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                    Browse Our Portfolio <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>