@model IEnumerable<RealEstateSite.Models.Property>

@{
    ViewData["Title"] = "Properties";
}

<style>
    body {
        background-color: #f4f6f8;
    }

    .sticky-sidebar {
        position: sticky;
        top: 20px;
        z-index: 100;
        max-height: 90vh;
        overflow-y: auto;
        padding-right: 5px;
    }

        .sticky-sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sticky-sidebar::-webkit-scrollbar-thumb {
            background-color: #ced4da;
            border-radius: 10px;
        }

    .filter-title {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 8px;
        margin-top: 15px;
        display: block;
    }

    .scroll-box {
        max-height: 150px;
        overflow-y: auto;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 10px;
    }

    .property-card {
        border-radius: 12px;
        overflow: hidden;
        background: white;
        transition: transform 0.2s;
    }

        .property-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .card-img-wrapper {
        height: 200px;
        position: relative;
        overflow: hidden;
    }

    .card-img-top {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .clickable-area {
        text-decoration: none;
        color: inherit;
    }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="sticky-sidebar card border-0 shadow-sm p-3">
                <form asp-action="Index" method="get">
                    <input type="hidden" name="listingStatus" value="@ViewBag.CurrentListingStatus" />

                    <h5 class="fw-bold text-dark mb-3"><i class="bi bi-sliders me-2"></i>Detailed Search</h5> <hr />

                    <span class="filter-title">City</span>
                    <div id="cityList" class="scroll-box shadow-sm mb-2"></div>

                    <span class="filter-title">District</span>
                    <div id="districtList" class="scroll-box shadow-sm mb-2"><small class="text-muted ps-1">Select City First</small></div>

                    <span class="filter-title">Room Count</span>
                    <div class="scroll-box shadow-sm">
                        @{
                            var roomOptions = new List<string>
                                                {
                                                "1+0 (Studio)", "1+1", "2+1", "2+2", "3+1", "3+2",
                                                "4+1", "4+2", "5+1", "5+2", "6+1", "6+2",
                                                "7+1", "7+2", "8+1", "8+2", "9+1", "9+2",
                                                "10+1", "10+2", "More than 10"
                                                };
                            var selectedRooms = Context.Request.Query["roomCounts"];
                        }
                        @foreach (var room in roomOptions)
                        {
                            var isChecked = selectedRooms.Contains(room) ? "checked" : "";
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="roomCounts" value="@room" id="r_@room" @isChecked>
                                <label class="form-check-label small" for="r_@room">@room</label>
                            </div>
                        }
                    </div>

                    <span class="filter-title">Heating Type</span>
                    <div class="scroll-box shadow-sm">
                        @foreach (var heat in Html.GetEnumSelectList<RealEstateSite.Models.HeatingType>())
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="heatingTypes" value="@heat.Value" id="h_@heat.Value">
                                <label class="form-check-label small" for="h_@heat.Value">@heat.Text</label>
                            </div>
                        }
                    </div>

                    <span class="filter-title">Price Range (TL)</span>
                    <div class="d-flex gap-1 mb-2">
                        <input type="number" name="minPrice" class="form-control form-control-sm" placeholder="Min" value="@Context.Request.Query["minPrice"]">
                        <input type="number" name="maxPrice" class="form-control form-control-sm" placeholder="Max" value="@Context.Request.Query["maxPrice"]">
                    </div>

                    <span class="filter-title">Square Meters (m²)</span>
                    <div class="d-flex gap-1 mb-3">
                        <input type="number" name="minSize" class="form-control form-control-sm" placeholder="Min" value="@Context.Request.Query["minSize"]">
                        <input type="number" name="maxSize" class="form-control form-control-sm" placeholder="Max" value="@Context.Request.Query["maxSize"]">
                    </div>

                    <span class="filter-title">Features</span>
                    <div class="scroll-box shadow-sm mb-4">
                        @if (ViewBag.Features != null)
                        {
                            foreach (var feature in (List<RealEstateSite.Models.Feature>)ViewBag.Features)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selectedFeatures" value="@feature.Id" id="f_@feature.Id">
                                    <label class="form-check-label small" for="f_@feature.Id">@feature.Name</label>
                                </div>
                            }
                        }
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-bold rounded-pill shadow-sm">Filter</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-2">
                    <ul class="nav nav-pills nav-fill">
                        <li class="nav-item">
                            <a class="nav-link @(string.IsNullOrEmpty((string)ViewBag.CurrentListingStatus) || (string)ViewBag.CurrentListingStatus == "Active" ? "active fw-bold bg-success text-white" : "")"
                               asp-action="Index" asp-route-listingStatus="Active">
                                <i class="bi bi-check-circle me-2"></i>Active Listings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((string)ViewBag.CurrentListingStatus == "Passive" ? "active fw-bold bg-secondary text-white" : "")"
                               asp-action="Index" asp-route-listingStatus="Passive">
                                <i class="bi bi-eye-slash me-2"></i>Inactive Listings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((string)ViewBag.CurrentListingStatus == "All" ? "active fw-bold bg-primary text-white" : "")"
                               asp-action="Index" asp-route-listingStatus="All">
                                <i class="bi bi-collection me-2"></i>All Listings
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4 ps-2">
                <h4 class="fw-bold m-0 text-dark">
                    @if (Model != null)
                    {
                        <span>@Model.Count() Properties Found</span>
                        @if ((string)ViewBag.CurrentListingStatus == "Passive")
                        {
                            <small class="text-muted fs-6 ms-2">(Passive Listings)</small>
                        }
                    }
                    else
                    {
                        <span>Properties</span>
                    }
                </h4>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
                        <i class="bi bi-plus-lg me-1"></i> Add New
                    </a>
                }
            </div>

            <div class="row g-4">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4 col-lg-6">
                            <div class="card property-card h-100 border-0 shadow-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="card-img-wrapper d-block position-relative">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title">
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center h-100 bg-light text-muted"><i class="bi bi-camera-fill fs-1"></i></div>
                                    }

                                    <span class="badge bg-@(item.Type.ToString() == "Sale" ? "danger" : "primary") position-absolute top-0 start-0 m-3 py-2 px-3 rounded-pill shadow-sm">@item.Type</span>

                                    @if (!item.IsActive)
                                    {
                                        <span class="badge bg-dark position-absolute top-0 end-0 m-3 py-2 px-3 rounded-pill shadow-sm"><i class="bi bi-eye-slash"></i> PASSIVE</span>
                                    }

                                    <div class="position-absolute bottom-0 start-0 m-3 px-3 py-1 bg-white text-dark fw-bold rounded shadow-sm fs-6">
                                        @((item.Price ?? 0).ToString("N0")) ₺
                                    </div>
                                </a>
                                <div class="card-body p-3 d-flex flex-column">
                                    <div class="text-uppercase text-primary fw-bold mb-1" style="font-size: 0.75rem;">
                                        @item.City / @item.District
                                        <div class="text-muted small text-capitalize">@item.Neighborhood</div>
                                    </div>
                                    <h6 class="card-title fw-bold mb-3 text-truncate">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="clickable-area" title="@item.Title">@item.Title</a>
                                    </h6>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between text-muted border-top pt-3 small mb-3">
                                            <span><i class="bi bi-rulers me-1"></i> @item.SquareMeters m²</span>
                                            <span><i class="bi bi-door-open me-1"></i> @(item.RoomCount ?? "-")</span>
                                        </div>

                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <div class="d-flex gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm flex-fill fw-bold shadow-sm text-white">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm flex-fill fw-bold shadow-sm">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <h4>No properties found matching your criteria.</h4>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var allData = [];

            $.getJSON('/json/data.json', function (data) {
                allData = Array.isArray(data) ? data : (data.data || []);

                var cityHtml = '';
                var urlParams = new URLSearchParams(window.location.search);
                var selectedCities = urlParams.getAll("cities");

                allData.forEach(c => {
                    var isChecked = selectedCities.includes(c.name) ? "checked" : "";
                    cityHtml += `<div class="form-check mb-1">
                                    <input class="form-check-input city-check" type="checkbox" name="cities" value="${c.name}" id="c_${c.name}" ${isChecked}>
                                    <label class="form-check-label small" for="c_${c.name}">${c.name}</label>
                                 </div>`;
                });
                $('#cityList').html(cityHtml);

                if ($('.city-check:checked').length > 0) {
                    updateDistricts();
                }
            });

            $(document).on('change', '.city-check', function() {
                updateDistricts();
            });

            function updateDistricts() {
                var selectedCities = $('.city-check:checked').map(function() { return this.value; }).get();
                if(selectedCities.length === 0) {
                    $('#districtList').html('<small class="text-muted ps-1">Select City First</small>');
                    return;
                }

                var districtHtml = '';
                var urlParams = new URLSearchParams(window.location.search);
                var selectedDistricts = urlParams.getAll("districts");

                selectedCities.forEach(cityName => {
                    var city = allData.find(x => x.name === cityName);
                    if(city && city.counties) {
                        city.counties.forEach(county => {
                            var isChecked = selectedDistricts.includes(county.name) ? "checked" : "";
                            districtHtml += `<div class="form-check mb-1">
                                                <input class="form-check-input district-check" type="checkbox" name="districts" value="${county.name}" id="d_${county.name}" ${isChecked}>
                                                <label class="form-check-label small" for="d_${county.name}">${county.name} <span class="text-muted" style="font-size:10px">(${cityName})</span></label>
                                             </div>`;
                        });
                    }
                });
                $('#districtList').html(districtHtml);
            }
        });
    </script>
}